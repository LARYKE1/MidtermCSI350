@model MidtermCSI350.Models.Employee


<h2>Create Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="EmployeerName">Employee Name:</label>
        <input type="text" id="EmployeerName" name="EmployeerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number:</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ManagerId">Manager:</label>
        @Html.DropDownListFor(model => model.ManagerId, ViewBag.Employees as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>